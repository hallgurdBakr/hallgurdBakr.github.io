{% macro label(for, text) %}
<label
  for="{{ for }}"
  class="block text-sm font-medium after:ms-0.5 after:text-red-500 after:content-['*']"
  >{{ text }}</label
>
{% endmacro %} {% macro field(type='text', name, value='') %}
<input
  type="{{ type }}"
  id="{{ name }}"
  name="{{ name }}"
  value="{{ value | escape }}"
  dir="auto"
  class="mt-1 block w-full rounded-md bg-zinc-100 px-3 py-2 text-sm focus:outline-none dark:bg-zinc-900"
/>
{% endmacro %} {% macro textarea(name) %}
<textarea
  id="{{ name }}"
  name="{{ name }}"
  rows="5"
  dir="auto"
  class="mt-1 block w-full rounded-md bg-zinc-100 px-3 py-2 text-sm focus:outline-none dark:bg-zinc-900"
></textarea>
{% endmacro %} {% macro submit(text) %}
<button
  class="flex w-full items-center justify-center rounded-xl bg-zinc-800 px-4 py-2 text-base font-medium text-zinc-100 hover:bg-zinc-900 focus:bg-zinc-800 focus:outline focus:outline-4 focus:outline-zinc-200 dark:bg-zinc-200 dark:text-zinc-800 dark:hover:bg-zinc-100 dark:focus:bg-zinc-200 dark:focus:outline-zinc-800"
  type="submit"
  id="submitBtn"
>
  {{ text }}
</button>
{% endmacro %}
