{% set activePage = page.url %}
<header class="container mx-auto flex items-center justify-between overflow-hidden py-3.5 md:py-4">
  <nav aria-label="{{ languages[page.lang].ariaHeaderMenu }}">
    <ul class="flex items-center gap-x-3.5 text-base font-normal md:gap-x-6">
      {% for item in navigation[page.lang] %}
      <li>
        <a href="{{ item.url }}"
          class="text-zinc-500 transition duration-200 ease-in-out hover:text-zinc-800 dark:hover:text-zinc-100" {{
          helpers.getLinkActiveState(item.url,page.url)|safe }}>
          {{ item.text }}
        </a>
      </li>
      {% endfor %}
    </ul>
  </nav>
  <div class="flex items-center gap-3">
    <nav aria-label="{{ languages[page.lang].ariaLang }}">
      <button 
        type="button"
        id="languageBtn"
        lang="{{ 'en' if page.lang === 'ckb' else 'ckb' }}" 
        class="flex h-8 cursor-pointer items-center justify-center rounded-xl border border-zinc-200 px-3 text-sm font-normal transition duration-200 ease-in-out hover:border-zinc-800 dark:border-zinc-800 dark:hover:border-zinc-700">
        {% if page.lang === "ckb" %}English{% else %}کوردی{% endif %}
      </button>
    </nav>

    <button type="button" id="theme-toggle" class="flex h-8 w-8 cursor-pointer items-center justify-center rounded-xl border border-zinc-200 transition duration-200 ease-in-out hover:border-zinc-800 dark:border-zinc-800 dark:hover:border-zinc-700">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" class="dark:hidden" fill="currentColor"
        viewBox="0 0 16 16">
        <path
          d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278zM4.858 1.311A7.269 7.269 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.316 7.316 0 0 0 5.205-2.162c-.337.042-.68.063-1.029.063-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286z" />
      </svg>
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="hidden fill-zinc-100 dark:block" viewBox="0 0 16 16">
        <path
          d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6zm0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z" />
